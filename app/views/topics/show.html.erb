<div class="col-md-10 col-md-offset-1">
  <div class="message-show">
    <h2><%= @topic.title %></h2>
    <p class="message-posted-by"><%= time_ago_in_words(@topic.created_at) %> ago</p>
    <p class="message-desc"><%= @topic.description %></p>

    <h3 class="comment-section-header">Comments:</h3>
    <p><%= render @topic.comment%></p>

    <h3 class="reply-to-msg">Join Discussion:</h3>
    <%= render 'comments/form'%>

    <div class="links btn-group">
      <%= link_to "Back", root_path, class: "btn btn-default" %>
      <%= link_to "Edit", edit_topic_path, class: "btn btn-primary"%>
      <%= link_to "Delete", topic_path(@topic), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
  </div>
</div>
