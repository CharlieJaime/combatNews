<div class="comment">
  <p class="comment-content"><%= comment.content %></p>
  <p class="comment-posted-by">By: <%= comment.user.email %> <%=time_ago_in_words(comment.created_at) %> ago</p>

  <div class="links">
    <% if user_signed_in? %>
      <% if comment.user_id == current_user.id %>
        <%= link_to "Edit", edit_topic_comment_path(comment.topic, comment) %>
        <%= link_to "Delete", topic_comment_path(comment.topic, comment), method: :delete, data: { confirm: "Are you sure?"} %>
      <% end %>
    <% end %>
  </div>
</div>
